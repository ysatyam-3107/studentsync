<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="12dp">

    <TextView android:id="@+id/tvMemberName" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Member Name" android:textSize="16sp"
        android:textStyle="bold" android:textColor="@android:color/black" />

    <TextView android:id="@+id/tvMemberEmail" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="member.email@example.com"
        android:textSize="14sp" android:textColor="@android:color/darker_gray" />

</LinearLayout>
