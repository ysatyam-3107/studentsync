<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.studysync">

    <!-- ===================== -->
    <!-- REQUIRED PERMISSIONS -->
    <!-- ===================== -->

    <!-- Internet (Firebase + Agora) -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Storage (ONLY what you need) -->
    <!-- For file picker + Firebase upload -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"/>

    <!-- Camera & Audio (Agora Video Call) -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <!-- Network state (Agora â€“ optional but recommended) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- Bluetooth (Android 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"/>

    <!-- Phone state (Agora optional) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <!-- Camera feature (optional, not required) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>

    <!-- ===================== -->
    <!-- APPLICATION -->
    <!-- ===================== -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar"
        tools:targetApi="31">

        <!-- LAUNCHER -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- MAIN FLOW -->
        <activity
            android:name=".MainActivity"
            android:exported="false"/>

        <activity
            android:name=".RegisterActivity"
            android:exported="false"/>

        <activity
            android:name=".StudyRoomActivity"
            android:exported="false"/>

        <activity
            android:name=".StudyRoomInsideActivity"
            android:exported="false"
            android:parentActivityName=".StudyRoomActivity"/>

        <activity
            android:name=".PomodoroActivity"
            android:exported="false"
            android:parentActivityName=".StudyRoomInsideActivity"/>

        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:parentActivityName=".StudyRoomInsideActivity"/>

        <activity
            android:name=".NotesActivity"
            android:exported="false"
            android:parentActivityName=".StudyRoomInsideActivity"/>

        <activity
            android:name=".TaskActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".MyRoomsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>

        <!-- VIDEO CALL -->
        <activity
            android:name=".VideoCallActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".StudyRoomInsideActivity"/>

    </application>

</manifest>
