<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.studysync">

    <!-- Internet (Firebase + Agora) -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"/>

    <!-- Storage -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"/>

    <!-- Camera & Audio (Agora Video Call) -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <!-- Network state -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- Bluetooth (Android 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"/>

    <!-- Phone state (Agora optional) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar"
        android:name=".MyApp"
        tools:targetApi="31">

        <!-- ── LAUNCHER ─────────────────────────────────────────── -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ── BOTTOM NAV ACTIVITIES (singleTop = no stack buildup) ─ -->
        <!--
            IMPORTANT: These 4 activities use singleTop so that tapping
            a nav tab never creates a duplicate instance.
            parentActivityName is REMOVED — it adds a system back arrow
            which conflicts with the custom navbar behaviour.
        -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:launchMode="singleTop"/>

        <activity
            android:name=".MyRoomsActivity"
            android:exported="false"
            android:launchMode="singleTop"/>

        <activity
            android:name=".TaskActivity"
            android:exported="false"
            android:launchMode="singleTop"/>

        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:launchMode="singleTop"/>

        <!-- ── OTHER ACTIVITIES (normal launch, not nav tabs) ────── -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"/>

        <activity
            android:name=".StudyRoomActivity"
            android:exported="false"/>

        <activity
            android:name=".StudyRoomInsideActivity"
            android:exported="false"/>

        <activity
            android:name=".PomodoroActivity"
            android:exported="false"/>

        <activity
            android:name=".ChatActivity"
            android:exported="false"/>

        <activity
            android:name=".NotesActivity"
            android:exported="false"/>

        <!-- VIDEO CALL -->
        <activity
            android:name=".VideoCallActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

    </application>

</manifest>