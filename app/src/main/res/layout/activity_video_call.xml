<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- Remote Grid -->
    <GridLayout
        android:id="@+id/remoteVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2" />

    <!-- Local Preview -->
    <FrameLayout
        android:id="@+id/localVideoContainer"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:background="#55000000" />

    <!-- Participant Count -->
    <TextView
        android:id="@+id/tvParticipantCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 in call"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#66000000"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnMute"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="@null"
            android:contentDescription="@string/mute_microphone"/>

        <ImageButton
            android:id="@+id/btnVideo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@null"
            android:contentDescription="@string/toggle_video"/>

        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:background="@null"
            android:contentDescription="@string/switch_camera"/>

        <ImageButton
            android:id="@+id/btnMuteAll"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_lock_silent_mode"
            android:background="@null"
            android:contentDescription="@string/mute_all"/>

        <ImageButton
            android:id="@+id/btnEndCall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@null"
            android:contentDescription="@string/end_call"/>
    </LinearLayout>

</RelativeLayout>
