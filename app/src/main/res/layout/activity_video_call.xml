<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/premium_call_background">

    <!-- Remote Grid -->
    <GridLayout
        android:id="@+id/remoteVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2" />

    <!-- Local Preview (Premium Floating Window) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/localVideoContainer"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#1A2238">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <!-- Participant Count (Premium Badge) -->
    <TextView
        android:id="@+id/tvParticipantCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 in call"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:background="@drawable/premium_badge"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <!-- Glass Control Panel -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#121826">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="18dp">

            <!-- Mute -->
            <ImageButton
                android:id="@+id/btnMute"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/premium_circle_button"
                android:src="@android:drawable/ic_btn_speak_now"
                android:contentDescription="Mute"
                app:tint="#FFFFFF" />

            <!-- Video -->
            <ImageButton
                android:id="@+id/btnVideo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/premium_circle_button"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="Video"
                app:tint="#FFFFFF" />

            <!-- Switch -->
            <ImageButton
                android:id="@+id/btnSwitchCamera"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/premium_circle_button"
                android:src="@android:drawable/ic_menu_rotate"
                android:contentDescription="Switch"
                app:tint="#FFFFFF" />

            <!-- Mute All -->
            <ImageButton
                android:id="@+id/btnMuteAll"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/premium_circle_button"
                android:src="@android:drawable/ic_lock_silent_mode"
                android:contentDescription="Mute All"
                app:tint="#FFFFFF" />

            <!-- End Call (Luxury Red) -->
            <ImageButton
                android:id="@+id/btnEndCall"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/premium_end_call_button"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="End"
                app:tint="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>