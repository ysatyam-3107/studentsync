<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0F1E">

    <!-- â”€â”€ Remote Video Grid (full screen) â”€â”€ -->
    <GridLayout
        android:id="@+id/remoteVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2" />

    <!-- â”€â”€ Top scrim â”€â”€ -->
    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_scrim_gradient"/>

    <!-- â”€â”€ Bottom scrim â”€â”€ -->
    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_scrim_gradient"/>

    <!-- â”€â”€ Local Preview pip (top-right) â”€â”€ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/localVideoContainer"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="#1A2238">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <!-- â”€â”€ Top info (count + timer) â”€â”€ -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvParticipantCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥ 1 in call"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            android:background="@drawable/badge_dark_rounded"
            android:paddingHorizontal="14dp"
            android:paddingVertical="7dp"/>

        <TextView
            android:id="@+id/tvCallDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#B0C4DE"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="6dp"/>

    </LinearLayout>

    <!-- â”€â”€ Control Panel â”€â”€ -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="36dp"
        android:paddingTop="12dp">

        <!-- Button labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Mute"     android:textColor="#78909C" android:textSize="10sp"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Camera"   android:textColor="#78909C" android:textSize="10sp"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Flip"     android:textColor="#78909C" android:textSize="10sp"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Mute All" android:textColor="#78909C" android:textSize="10sp"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="End"      android:textColor="#78909C" android:textSize="10sp"/>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Mute mic -->
            <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center">
                <ImageButton
                    android:id="@+id/btnMute"
                    android:layout_width="58dp" android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_control_normal"
                    android:src="@drawable/ic_mic"
                    android:contentDescription="Mute"
                    android:elevation="4dp"/>
            </FrameLayout>

            <!-- Toggle camera -->
            <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center">
                <ImageButton
                    android:id="@+id/btnVideo"
                    android:layout_width="58dp" android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_control_normal"
                    android:src="@drawable/ic_video"
                    android:contentDescription="Camera"
                    android:elevation="4dp"/>
            </FrameLayout>

            <!-- Flip camera (uses Android system rotate icon) -->
            <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center">
                <ImageButton
                    android:id="@+id/btnSwitchCamera"
                    android:layout_width="52dp" android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_control_normal"
                    android:src="@android:drawable/ic_menu_rotate"
                    android:contentDescription="Flip Camera"
                    app:tint="#90CAF9"
                    android:elevation="4dp"/>
            </FrameLayout>

            <!-- Mute all (uses Android system silent icon) -->
            <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center">
                <ImageButton
                    android:id="@+id/btnMuteAll"
                    android:layout_width="52dp" android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_control_normal"
                    android:src="@android:drawable/ic_lock_silent_mode"
                    android:contentDescription="Mute All"
                    app:tint="#90CAF9"
                    android:elevation="4dp"/>
            </FrameLayout>

            <!-- End call -->
            <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center">
                <ImageButton
                    android:id="@+id/btnEndCall"
                    android:layout_width="62dp" android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_end_call"
                    android:src="@drawable/ic_call_end"
                    android:contentDescription="End Call"
                    android:elevation="8dp"/>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>