<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F">

    <!-- Main Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnLeaveRoom"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Room Code (NO back button) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dark_header_gradient"
                android:padding="24dp"
                android:paddingBottom="32dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯"
                    android:textSize="48sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study Room"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="12dp" />

                <!-- Room Code Badge -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/tvRoomCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CODE: XXXXX"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Members Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥ Members Online"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="12dp" />

                <!-- Horizontal scrolling members list (photo + name only) -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="24dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:padding="4dp"
                        android:clipToPadding="false" />

                </HorizontalScrollView>

                <!-- Features Grid -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <!-- Row 1: Video Call & Pomodoro -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Video Call Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardVideoCall"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardBackgroundColor="#1A1A1A"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/video_call_gradient"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“¹"
                                android:textSize="32sp"
                                android:layout_alignParentTop="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Video Call"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_alignParentBottom="true" />

                            <Button
                                android:id="@+id/btnVideoCall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:foreground="?attr/selectableItemBackground" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Pomodoro Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPomodoro"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardBackgroundColor="#1A1A1A"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/pomodoro_gradient"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â±"
                                android:textSize="32sp"
                                android:layout_alignParentTop="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pomodoro"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_alignParentBottom="true" />

                            <Button
                                android:id="@+id/btnPomodoroRoom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:foreground="?attr/selectableItemBackground" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Row 2: Chat & Notes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Chat Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardChat"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardBackgroundColor="#1A1A1A"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/chat_gradient"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’¬"
                                android:textSize="32sp"
                                android:layout_alignParentTop="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Group Chat"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_alignParentBottom="true" />

                            <Button
                                android:id="@+id/btnChatRoom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:foreground="?attr/selectableItemBackground" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Notes Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardNotes"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardBackgroundColor="#1A1A1A"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/notes_gradient"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“š"
                                android:textSize="32sp"
                                android:layout_alignParentTop="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notes"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_alignParentBottom="true" />

                            <Button
                                android:id="@+id/btnNotesRoom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:foreground="?attr/selectableItemBackground" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Tasks Button (Full Width) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTasks"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tasks_gradient"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tvTaskIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ“"
                            android:textSize="32sp"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tasks &amp; To-Do"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_toEndOf="@id/tvTaskIcon"
                            android:layout_marginStart="16dp"
                            android:layout_centerVertical="true" />

                        <Button
                            android:id="@+id/btnTasksRoom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:foreground="?attr/selectableItemBackground" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Leave Room Button (Fixed at bottom) -->
    <Button
        android:id="@+id/btnLeaveRoom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="Leave Room"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/leave_room_button"
        android:layout_margin="16dp"
        android:elevation="8dp" />

</RelativeLayout>