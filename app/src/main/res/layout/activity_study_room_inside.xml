<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Room Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_gradient"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study Room"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvRoomCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Code: XXXXX"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/badge_background"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Members Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥ Members"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:radius="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMembers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:clipToPadding="false" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Features"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="12dp" />

            <!-- Pomodoro Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:radius="12dp">

                <Button
                    android:id="@+id/btnPomodoroRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â± Pomodoro Timer"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:backgroundTint="#1976D2"
                    android:padding="16dp"
                    android:textAllCaps="false" />

            </androidx.cardview.widget.CardView>

            <!-- Chat Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:radius="12dp">

                <Button
                    android:id="@+id/btnChatRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¬ Group Chat"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:backgroundTint="#43A047"
                    android:padding="16dp"
                    android:textAllCaps="false" />

            </androidx.cardview.widget.CardView>

            <!-- Notes Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:radius="12dp">

                <Button
                    android:id="@+id/btnNotesRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š Notes Sharing"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:backgroundTint="#F57C00"
                    android:padding="16dp"
                    android:textAllCaps="false" />

            </androidx.cardview.widget.CardView>

            <!-- Tasks Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:radius="12dp">

                <Button
                    android:id="@+id/btnTasksRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Task Tracker"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:backgroundTint="#8E24AA"
                    android:padding="16dp"
                    android:textAllCaps="false" />

            </androidx.cardview.widget.CardView>
            <!-- Video Call Button - ADD THIS -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:radius="12dp">

                <Button
                    android:id="@+id/btnVideoCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¹ Video Call"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:backgroundTint="#E91E63"
                    android:padding="16dp"
                    android:textAllCaps="false" />

            </androidx.cardview.widget.CardView>
            <!-- Leave Room Button -->
            <Button
                android:id="@+id/btnLeaveRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸšª Leave Room"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#E53935"
                android:layout_marginTop="8dp"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>