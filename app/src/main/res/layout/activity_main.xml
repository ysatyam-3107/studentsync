<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F">

    <!-- ================= CONTENT ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== HEADER ===== -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dark_header_gradient"
                android:padding="24dp"
                android:paddingBottom="36dp">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/profile_icon_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_profile_circle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/ivProfile"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="StudySync"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back!"
                        android:textSize="16sp"
                        android:textColor="#B0B0B0"
                        android:layout_marginBottom="20dp"/>

                    <!-- ===== ACTIVE ROOMS CARD ===== -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardActiveRooms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="#1A1A1A">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="18dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:text="ðŸ“š"
                                android:textSize="26sp"
                                android:layout_marginEnd="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvRoomCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 Active Rooms"
                                    android:textSize="19sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tap to manage your study sessions â†’"
                                    android:textSize="12sp"
                                    android:textColor="#808080"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="#4CAF50"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

            <!-- ===== MAIN CONTENT ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingTop="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Start"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp"/>

                <!-- CREATE / JOIN CARD -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardStudyRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="10dp"
                    android:layout_marginBottom="32dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/action_card_gradient"
                        android:padding="22dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <TextView
                                android:text="ðŸ§ "
                                android:textSize="34sp"
                                android:layout_marginBottom="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Create or Join Room"
                                android:textSize="21sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Start your study session instantly"
                                android:textSize="13sp"
                                android:textColor="#D0D0D0"
                                android:layout_marginTop="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            android:background="@drawable/arrow_circle_bg"
                            android:padding="10dp"
                            app:tint="#FFFFFF"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- ================= BOTTOM NAV ================= -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:elevation="16dp">

        <!-- HOME -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnNavHome"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_compass"
                app:tint="#4CAF50"/>

            <TextView
                android:text="Home"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- ROOMS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnNavRooms"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="#808080"/>

            <TextView
                android:text="My Rooms"
                android:textSize="11sp"
                android:textColor="#808080"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- TASKS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnNavTasks"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#808080"/>

            <TextView
                android:text="Tasks"
                android:textSize="11sp"
                android:textColor="#808080"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- PROFILE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnNavProfile"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="#808080"/>

            <TextView
                android:text="Profile"
                android:textSize="11sp"
                android:textColor="#808080"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>