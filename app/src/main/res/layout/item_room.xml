<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#1A2133">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvRoomCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Room: ABC123"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/tvHostBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOST"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/host_badge_premium"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- MEMBER + DATE -->
        <TextView
            android:id="@+id/tvMemberCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥ 5 members"
            android:textSize="14sp"
            android:textColor="#B0BEC5"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created: Jan 01, 2024"
            android:textSize="12sp"
            android:textColor="#78909C"
            android:layout_marginTop="4dp"/>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#263238"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"/>

        <!-- FOOTER ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tap to enter room"
                android:textSize="13sp"
                android:textColor="#4CAF50"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Enter"
                app:tint="#4CAF50" />
        </LinearLayout>

        <!-- DELETE BUTTON (Host Only) -->
        <Button
            android:id="@+id/btnDeleteRoom"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="Delete Room"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:layout_marginTop="14dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>