<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F1A">

    <!-- PREMIUM HEADER -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@drawable/premium_task_header"
        android:padding="24dp"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Tracker"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0 tasks completed"
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="8dp"/>

        <ProgressBar
            android:id="@+id/progressBarTask"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="12dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/premium_progress_bar"/>

    </LinearLayout>

    <!-- TASK LIST — sits between header and nav -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@+id/bottomNavCard"
        android:layout_marginTop="-30dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#121826">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:clipToPadding="false"
            android:overScrollMode="never"/>

    </androidx.cardview.widget.CardView>

    <!-- FAB — sits above nav bar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavCard"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#4CAF50"
        app:tint="#FFFFFF"
        app:elevation="14dp"/>

    <!-- BOTTOM NAV (persistent) -->
    <include
        layout="@layout/layout_bottom_nav"
        android:id="@+id/bottomNavCard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>