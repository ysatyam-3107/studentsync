<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnLogout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- â”€â”€â”€ HEADER â”€â”€â”€ -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/premium_header_gradient"
                android:padding="24dp">

                <!-- Profile Photo + Edit overlay -->
                <FrameLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfileImage"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/ic_profile_circle"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:focusable="true"
                        app:civ_border_width="3dp"
                        app:civ_border_color="#FFFFFF"/>

                    <ImageView
                        android:id="@+id/ivEditPhoto"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/profile_edit_bg"
                        android:padding="7dp"
                        android:src="@drawable/ic_edit"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="#FFFFFF"/>
                </FrameLayout>

                <!-- Name (tap to edit) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvProfileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_edit"
                        android:layout_marginStart="6dp"
                        app:tint="#CCCCCC"
                        android:clickable="false"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@email.com"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"
                    android:layout_marginTop="4dp"/>

                <!-- StudySync badge -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="#1E3A5F"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ StudySync Member"
                        android:textSize="12sp"
                        android:textColor="#64B5F6"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="6dp"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- â”€â”€â”€ STATS ROW â”€â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="4dp">

                <!-- Rooms Joined -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvStatRooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rooms"
                            android:textSize="12sp"
                            android:textColor="#78909C"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tasks Done -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvStatTasks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#2196F3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tasks Done"
                            android:textSize="12sp"
                            android:textColor="#78909C"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Focus Sessions -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvStatSessions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€”"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sessions"
                            android:textSize="12sp"
                            android:textColor="#78909C"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- â”€â”€â”€ ACCOUNT SECTION â”€â”€â”€ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="13sp"
                android:textColor="#546E7A"
                android:textAllCaps="true"
                android:letterSpacing="0.12"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Edit Name row -->
                    <RelativeLayout
                        android:id="@+id/rowEditName"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœï¸  Edit Display Name"
                            android:textSize="15sp"
                            android:textColor="#E2E8F0"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_back"
                            android:rotation="180"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:tint="#546E7A"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="#263348"/>

                    <!-- Change Photo row -->
                    <RelativeLayout
                        android:id="@+id/rowChangePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“·  Change Profile Photo"
                            android:textSize="15sp"
                            android:textColor="#E2E8F0"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_back"
                            android:rotation="180"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:tint="#546E7A"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- â”€â”€â”€ APP INFO SECTION â”€â”€â”€ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App"
                android:textSize="13sp"
                android:textColor="#546E7A"
                android:textAllCaps="true"
                android:letterSpacing="0.12"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Version row -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â„¹ï¸  Version"
                            android:textSize="15sp"
                            android:textColor="#E2E8F0"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0.0"
                            android:textSize="14sp"
                            android:textColor="#546E7A"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="#263348"/>

                    <!-- Rate App row -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­  Rate StudySync"
                            android:textSize="15sp"
                            android:textColor="#E2E8F0"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_arrow_back"
                            android:rotation="180"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:tint="#546E7A"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Logout Button â€” pinned just above the nav bar -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_above="@+id/bottomNavCard"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:text="Log Out"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15sp"
        android:backgroundTint="#C62828"
        android:elevation="4dp"/>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBarProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <!-- BOTTOM NAV (persistent) -->
    <include
        layout="@layout/layout_bottom_nav"
        android:id="@+id/bottomNavCard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>