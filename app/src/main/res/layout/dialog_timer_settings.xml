<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0B0F1A"
    android:padding="24dp">

    <!-- Floating Premium Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#121826">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš™ Timer Settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#E0C68C"
                android:letterSpacing="0.05"
                android:layout_marginBottom="28dp"/>

            <!-- Work Duration Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Session Duration (minutes)"
                android:textSize="13sp"
                android:textColor="#9FA8DA"
                android:layout_marginBottom="8dp"/>

            <!-- Work Duration Input -->
            <EditText
                android:id="@+id/etWorkDuration"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="25"
                android:inputType="number"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/premium_input_background"
                android:layout_marginBottom="24dp"/>

            <!-- Break Duration Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Break Duration (minutes)"
                android:textSize="13sp"
                android:textColor="#9FA8DA"
                android:layout_marginBottom="8dp"/>

            <!-- Break Duration Input -->
            <EditText
                android:id="@+id/etBreakDuration"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="5"
                android:inputType="number"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/premium_input_background"
                android:layout_marginBottom="32dp"/>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/btnCancelSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#CCCCCC"
                    android:background="@drawable/premium_cancel_button"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/btnSaveSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:background="@drawable/premium_save_button"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>